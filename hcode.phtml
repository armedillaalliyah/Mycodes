<!DOCTYPE html>
<html>
<head>
  <title>Basic Information Forms</title>
  <style>
    body {
      background-image: url("Blue gradient white linear  wallpaper 4K HD.jpg");
      background-size: cover; 
      background-position: center; 
      background-color: #f2f2f2; 
    }
    
  </style>
  <script>
    function validateForm() {
      var email = document.getElementById("email").value;
      var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailPattern.test(email)) {
        alert("Please enter a valid email address");
        return false;
      }
      return true;
    }
  </script>
</head>
<body>

<form action="pcode.php" method="post" onsubmit="return validateForm()">
  <label for="firstName">First Name:</label>
  <input type="text" id="firstName" name="firstName"><br><br>

  <label for="middleName">Middle Name:</label>
  <input type="text" id="middleName" name="middleName"><br><br>

  <label for="lastName">Last Name:</label>
  <input type="text" id="lastName" name="lastName"><br><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email"><br><br>

  <label for="sex">Sex:</label>
  <select id="sex" name="sex">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select><br><br>

  <label>Subjects Taken:</label><br>
  <input type="checkbox" id="math" name="subject[]" value="math">
  <label for="math">Math</label><br>

  <input type="checkbox" id="science" name="subject[]" value="science">
  <label for="science">Science</label><br>

  <input type="checkbox" id="filipino" name="subject[]" value="filipino">
  <label for="filipino">Filipino</label><br>

  <input type="checkbox" id="english" name="subject[]" value="english">
  <label for="english">English</label><br><br>

  <input type="reset" value="Reset">
  <input type="submit" value="Submit">
</form>

</body>
</html>